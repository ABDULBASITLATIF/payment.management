<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    
    <f:SimpleForm id="paymentForm"
        editable="true"
        title="Payment"
        layout="ColumnLayout"
        columnsM="2"
        columnsL="3"
        columnsXL="4">
        <f:content>
            <!-- General Information Section -->
            
            <Label id="draftidLabel" text="Draft ID" required="true" width="auto"/>
            <Input id="draftidInput" value="" editable="false" width="auto"/>
            
            <Label id="companyCodeLabel" text="Company Code" required="true" width="auto"/>
            <Input id="companyCodeInput" value="" maxLength="4" width="auto" showValueHelp="true" valueHelpRequest=".InputHelps.onLoadCCVH"/>
            
            <Label id="fiscalYearLabel" text="Fiscal Year" required="true" width="auto"/>
            <Input id="fiscalYearInput" value="" maxLength="4" width="auto"/>
            
            <Label id="documentDateLabel" text="Document Date" required="true" width="auto"/>
            <DatePicker id="documentDatePicker" 
                value=""
                displayFormat="dd/MM/yyyy"
                width="auto"/>
            
            <Label id="postingDateLabel" text="Posting Date" required="true" width="auto"/>
            <DatePicker id="postingDatePicker" 
                value=""
                displayFormat="dd/MM/yyyy"
                width="auto"/>
            
            <Label id="referenceLabel" text="Reference" width="auto"/>
            <Input id="referenceInput" value="" maxLength="16" width="auto"/>
            
            <Label id="_IDGenLabel1" text="Header Text" width="auto"/>
            <Input id="_IDGenInput" value="" maxLength="25" width="auto"/>
            
            <!-- Bank Information Section -->
            
            <Label id="houseBankLabel" text="House Bank" required="true" width="auto"/>
            <Input id="houseBankInput" value="" maxLength="5" width="auto" showValueHelp="true" valueHelpRequest=".InputHelps.onLoadHouseBankVH"/>
            
            <Label id="houseBankAccountLabel" text="House Bank Account ID" required="true" width="auto"/>
            <Input id="houseBankAccountInput" value="" maxLength="5" width="auto" showValueHelp="true" valueHelpRequest=".InputHelps.onLoadHouseBankAccountVH"/>
        
            
            <Label id="glAccountLabel" text="G/L Account" required="true" width="auto"/>
            <Input id="glAccountInput" value="" maxLength="10" width="auto" showValueHelp="true" valueHelpRequest=".InputHelps.onLoadGLVH"/>
            
            <!-- Supplier Information Section -->
            
            <Label id="supplierAccountLabel" text="Vendor" required="true" width="auto"/>
            <Input id="supplierAccountInput" 
                value="" 
                maxLength="10" 
                width="auto"
                submit="onVendorSubmit"
                showValueHelp="true" 
                valueHelpRequest=".InputHelps.onLoadSupplierVH"/>
            
            <Label id="currencyLabel" text="Currency" required="true" width="auto"/>
            <Input id="currencyInput" value="" maxLength="5" width="auto"/>
            
            <!-- Amount Information Section -->
            
            <Label id="_IDGenLabel4" text="Total Pay. Amount" width="auto"/>
            <Input id="_IDGenInput3" value="" width="auto" change="onPayAmountChange" liveChange="onPayAmountChange"/>

            <Label id="_IDGenLabel2" text="Total Invoice Sum" width="auto"/>
            <Input id="_IDGenInput1" value="" width="auto" editable="false"/>

            <Label id="_IDGenLabel3" text="Balance" width="auto"/>
            <Input id="_IDGenInput2" value="" width="auto" editable="false"/>
        </f:content>
    </f:SimpleForm>
    
</core:FragmentDefinition>