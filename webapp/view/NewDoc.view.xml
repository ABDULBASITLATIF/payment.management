<mvc:View controllerName="zfi.payment.management.controller.NewDoc"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:svm="sap.ui.comp.smartvariants"
>
    <f:DynamicPage
        id="_IDGenDynamicPage"
        headerExpanded="{/headerExpanded}"
        showFooter="true"
    >
    <f:title>
    				<f:DynamicPageTitle id="_IDGenDynamicPageTitle">
					<f:heading>
						<Title id="_IDGenTitle" text="Payment Management"/>
					</f:heading>
					
					<f:actions>
						<Button id="_IDGenButton3"
								text="Create"
								type="Emphasized"
								press=".onCreate"/>
					</f:actions>
				
				</f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader id="_IDGenDynamicPageHeader1">
                <f:content>
                    <fb:FilterBar
                        id="filterbar"
                        persistencyKey="myPersKey"
                        useToolbar="false"
                        showFilterConfiguration="false"
                        search=".onFilterChange"
                    >
                        <fb:filterGroupItems>
                            <fb:FilterGroupItem
                                id="_IDGenFilterGroupItem1"
                                name="Article GTIN"
                                label="Article GTIN"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <Input
                                        id="_IDGenInput"
                                        name="Article GTIN"
                                        value="{zb_promo_codes>/Material}"
                                        placeholder="Add Filter"
                                        showSuggestion="false"
                                        showValueHelp="false"
                                        valueHelpRequest=".onInputHelp1"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>
                             <fb:FilterGroupItem
                                id="_IDGenFilterGroupItemfrom"
                                name="Valid From"
                                label="Valid From"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <DatePicker
                                        id="_IDGenInputfrom"
                                        name="Valid Date"
                                        value="{zb_promo_codes>/ValidFrom}"
                                        placeholder="Valid From"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem
                                id="_IDGenFilterGroupItem2"
                                name="Valid To"
                                label="Valid To"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <DatePicker
                                        id="_IDGenInput1"
                                        name="Valid Date"
                                        value="{zb_promo_codes>/ValidTo}"
                                        placeholder="Valid To"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem
                                id="_IDGenFilterGroupItem4"
                                name="Promotion Type"
                                label="Promotion Type"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <!-- <Input
                                        id="_IDGenInput2"
                                        name="Promotion Type"
                                        value="{pType>/value}"
                                        placeholder="Add Filter"
                                        showSuggestion="true"
                                        showValueHelp="true"
                                        valueHelpRequest=".onInputHelp3"
                                    /> -->
                                    <Select
                                        id="_IDGenObjectListItem1"
                                        editable="{/Editable}"
                                        forceSelection="false"
                                        selectedKey="{pType>/id}"
                                        items="{pType>/}"
                                        change=".onInput3"
                                        name="{pType>/name}"
                                    >
                                        <core:Item
                                            id="_IDGenItem2"
                                            key="{pType>id}"
                                            text="{pType>value}"
                                        />
                                    </Select>
                                </fb:control>
                            </fb:FilterGroupItem>

                            <fb:FilterGroupItem
                                id="_IDGenFilterGroupItem3"
                                name="No. Of Copies"
                                label="No. Of Copies"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <Input 
                                        id="copies"
                                        name="No Of Copies"
                                        value="{zb_promo_codes>/copies}"
                                        placeholder="Add Copies"
                                        showSuggestion="true"
                                      
                                    />
                                    <!-- <Select
                                        id="copies"
                                        editable="{/Editable}"
                                        forceSelection="false"
                                        selectedKey="{nCopy>/id}"
                                        items="{nCopy>/}"
                                        name="{nCopy>/name}"
                                    >
                                        <core:Item
                                            id="_IDGenItem3"
                                            key="{nCopy>id}"
                                            text="{nCopy>value}"
                                        />
                                    </Select> -->
                                </fb:control>
                            </fb:FilterGroupItem>
                        </fb:filterGroupItems>
                    </fb:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <Table
                id="table"
                inset="false"
                growing="true"
                growingThreshold="100"
                mode="MultiSelect"
                items="{qrListModel>/}"
                selectionChange=".onSelectionChange"
            >
                <columns>
                    <Column
                        id="_IDGenColumn"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text
                            id="gtin"
                            text="GTIN"
                        />
                    </Column>
                    <Column
                        id="_IDGenColumn1"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text
                            id="desc_ar"
                            text="Desc. Arabic"
                        />
                    </Column>
                    <Column
                        id="_IDGenColumn2"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text
                            id="desc_en"
                            text="Desc. English"
                        />
                    </Column>
                    <Column
                        id="_IDGenColumn3"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text
                            id="beforeprice"
                            text="Before Price"
                        />
                    </Column>
                    <Column
                        id="_IDGenColumn4"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text
                            id="afterprice"
                            text="After Price"
                        />
                    </Column>
                    <Column
                        id="_IDGenColumn5"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text
                            id="percoff"
                            text="Percentage Off"
                        />
                    </Column>
                    <Column
                        id="_IDGenColumn6"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text
                            id="promotype"
                            text="Promo Type"
                        />
                    </Column>
                    <Column
                        id="_IDGenColumn7"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text
                            id="promotext"
                            text="Promo Text"
                        />
                    </Column>
                    <Column
                        id="_IDGenColumn8"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text
                            id="validto"
                            text="Valid To"
                        />
                    </Column>
                    
                </columns>

                <items>
                    <ColumnListItem
                        id="_IDGenColumnListItem"
                        vAlign="Middle"
                    >
                        <cells>
                            <Text
                                id="_IDGenText7"
                                text="{qrListModel>Material}"
                            />
                            <Text
                                id="_IDGenText8"
                                text="{qrListModel>MaterialAr}"
                            />
                            <Text
                                id="_IDGenText9"
                                text="{qrListModel>MaterialEn}"
                            />
                            <Text
                                id="_IDGenText10"
                                text="{qrListModel>OldPrice}"
                            />
                            <Text
                                id="_IDGenText11"
                                text="{qrListModel>NewPrice}"
                            />
                            <Text
                                id="_IDGenText12"
                                text="{qrListModel>DiscountRate}"
                            />
                            <Text
                                id="_IDGenText13"
                                text="{qrListModel>PromotionType}"
                            />
                            <Text
                                id="_IDGenText14"
                                text="{qrListModel>PromotionText}"
                            />
                            <Text
                                id="_IDGenText15"
                                text="{
                                       path: 'qrListModel>ValidTo',
                                       type: 'sap.ui.model.type.Date',
                                       formatOptions: {
                                       pattern: 'dd/MM/yyyy'
                                        }
                                     }"
                            />

                        
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
        <!-- <f:footer>
            <OverflowToolbar id="_IDGenOverflowToolbar">
                <ToolbarSpacer id="_IDGenToolbarSpacer" />
                <Button
                    id="_IDGenButton"
                    type="Accept"
                    text=""
                    press=" "
                />
            </OverflowToolbar>
        </f:footer> -->
    </f:DynamicPage>
</mvc:View>